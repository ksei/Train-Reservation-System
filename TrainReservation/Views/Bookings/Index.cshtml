@model  IEnumerable<TrainReservation.Models.ViewBookingsModel>
@using Microsoft.AspNet.Identity
@Styles.Render("~/Content/style.css")


@{ViewBag.Title = "Bookings";}

<body style="height: auto;position:absolute;z-index:0;left:0;top:0;width:100%;min-height:100%; height:auto ;background-image:url('../../Content/Images/Mybk.png'); background-repeat:repeat-y;  background-size: contain; background-size:cover; background-attachment:fixed;
width: 100%;  ">

    <div class="container body-content" >

        <div class="span7">
            <div class="widget stacked widget-table action-table" style="padding-top:10%">

                <div class="widget-header">
                    <i class="icon-th-list"></i>
                    @if (System.Web.HttpContext.Current.User.Identity.IsAuthenticated && User.IsInRole("admin"))
            {
                        <h3>All Bookings</h3>
                    }
                    else
                    {
                        <h3>Your Bookings</h3>
                    }
                </div> <!-- /widget-header -->

                <div class="widget-content">

                    <table class="table table-striped table-bordered">

                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.bookingId)
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.tripId)
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.tripName)
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.seatId)
                                </th>
                                @if (System.Web.HttpContext.Current.User.Identity.IsAuthenticated && User.IsInRole("admin"))
            {
                                    <th>
                                        @Html.DisplayNameFor(model => model.Name)
                                    </th>
                                }
                                <th>
                                    @Html.DisplayNameFor(model => model.Time)
                                </th>

                                <th></th>
                            </tr>
                        </thead>
                        @foreach (var item in Model)
                        {
                            if (DateTime.Compare(DateTime.Now, item.Time) < 1)
                            {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.bookingId)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.tripId)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.tripName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.seatId)
                                </td>
                                @if (System.Web.HttpContext.Current.User.Identity.IsAuthenticated && User.IsInRole("admin"))
                                {
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                }
                                <td>
                                    @Html.DisplayFor(modelItem => item.Time)
                                </td>

                                <td>

                                   
                                    @Html.ActionLink("Cancel Booking", "Delete", new { id = item.bookingId })
                                </td>
                            </tr>
                            }
                        }

                    </table>

                </div> <!-- /widget-content -->

            </div> <!-- /widget -->

@if (HttpContext.Current.User.IsInRole("admin"))
{
            <div class="widget stacked widget-table action-table" style="padding-top:10%">

                <div class="widget-header">
                    <i class="icon-th-list"></i>
                  <h3>Expired Bookings</h3>
                </div> <!-- /widget-header -->

                           

                <div class="widget-content">

                    <table class="table table-striped table-bordered">

                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.bookingId)
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.tripId)
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.tripName)
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.seatId)
                                </th>
                                @if (System.Web.HttpContext.Current.User.Identity.IsAuthenticated && User.IsInRole("admin"))
                                {
                                    <th>
                                        @Html.DisplayNameFor(model => model.Name)
                                    </th>
                                }
                                <th>
                                    @Html.DisplayNameFor(model => model.Time)
                                </th>

                                <th></th>
                            </tr>
                        </thead>
                        @foreach (var item in Model)
                        {
                            if (DateTime.Compare(DateTime.Now, item.Time) >= 1)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.bookingId)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.tripId)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.tripName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.seatId)
                                    </td>
                                    @if (System.Web.HttpContext.Current.User.Identity.IsAuthenticated && User.IsInRole("admin"))
                                    {
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                    }
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Time)
                                    </td>

                                  
                                </tr>
                            }
                        }

                    </table>

                </div> <!-- /widget-content -->

            </div> <!-- /widget -->
}
        </div>
    </div>
    </body>