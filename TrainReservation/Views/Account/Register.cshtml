@model TrainReservation.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}
@Styles.Render("~/Content/Parallax.css")
<body style="position:absolute;z-index:0;left:0;top:0;width:100%;height:100%;background-image:url('../../Content/Images/Account.jpg'); background-repeat:no-repeat; background-size:cover;">

    <div class="container body-content">

        <div class="container">
            <div class="row vertical-offset-100">
                <div class="col-md-4 col-md-offset-4">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <div class="row-fluid user-row">
                                <img src="~/Content/Images/newTraveler.png" alt="Conxole Admin" />

                                <hr />
                            </div>
                        </div>
                        <div class="panel-body">

                            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                            {
                                @Html.AntiForgeryToken()

                                @Html.ValidationSummary("", new { @class = "text-danger" })
                                <fieldset>
                                    <label class="panel-login">
                                        <div class="login_result"></div>
                                    </label>


                                    @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", style = "margin-bottom:10px", @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })

                                    @Html.TextBoxFor(m => m.Name, new { placeholder = "Name", style = "margin-bottom:10px", @class = "form-control" })
                                    @Html.TextBoxFor(m => m.Age, new { placeholder = "Age", style = "margin-bottom:10px", @class = "form-control" })

                                    @Html.PasswordFor(m => m.Password, new { placeholder = "Password", style = "margin-bottom:10px", @class = "form-control" })
                                    @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "Confirm Password", style = "margin-bottom:10px", @class = "form-control" })


                                    <br></br>
                                    <input class="btn btn-lg btn-success btn-block" type="submit" value="Register!">
                                </fieldset>
                            }

                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</body>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
